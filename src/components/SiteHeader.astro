---
interface Props {
  subtitle?: string;
}
const { subtitle } = Astro.props as Props;

// Check if we're on the index page
const isIndexPage = Astro.url.pathname === "/";
---

<header class="relative text-center">
  {
    !isIndexPage && (
      <button
        onclick="history.back()"
        class="absolute left-0 top-1/2 -translate-y-1/2 inline-flex items-center gap-1 px-3 py-2 text-sm text-slate-600 hover:text-slate-800 hover:bg-slate-100 rounded-lg transition-colors"
        aria-label="Go back"
      >
        <i class="ri-arrow-left-line text-lg" />
        <span class="hidden sm:inline">Back</span>
      </button>
    )
  }

  <img src="/rhombus.svg" alt="BUPAL Logo" class="mx-auto mb-2 h-36 w-36" />
  <p class="text-slate-800 font-medium text-base">
    Boğaziçi University Palestine Awareness
  </p>
  <p class="mt-0.5 text-sm text-slate-500">
    Boğaziçi Üniversitesi Filistin Farkındalığı Topluluğu
  </p>
</header>
{
  subtitle && (
    <h2 class="mt-6 text-sm font-medium uppercase tracking-wide text-center text-slate-500">
      {subtitle}
    </h2>
  )
}
