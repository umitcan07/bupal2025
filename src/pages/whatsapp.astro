---
// Server-side redirect to WhatsApp
export const prerender = false;

// Replace with your actual WhatsApp URL
const WHATSAPP_URL = "https://chat.whatsapp.com/EXbnMjTWNiu5uyoZyM3yN4";

// Perform the redirect
return Astro.redirect(WHATSAPP_URL, 302);
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bupal Redirects</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        text-align: center;
      }
      .redirect-link {
        display: inline-block;
        margin: 20px;
        padding: 15px 30px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 18px;
      }
      .redirect-link:hover {
        background-color: #0056b3;
      }
      .whatsapp {
        background-color: #25d366;
      }
      .whatsapp:hover {
        background-color: #1da851;
      }
      .form {
        background-color: #6c757d;
      }
      .form:hover {
        background-color: #545b62;
      }
    </style>
  </head>
  <body>
    <h1>Soon: Bupal WhatsApp</h1>
  </body>
</html>
