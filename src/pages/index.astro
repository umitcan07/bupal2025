---
import Layout from "../layouts/Layout.astro";
import SiteHeader from "../components/SiteHeader.astro";
import { EXTERNAL_URLS } from "../constants";
export const prerender = false;
---

<Layout>
  <main class="mx-auto max-w-xl px-6 pb-16 pt-6 text-center h-full">
    <SiteHeader />

    <div class="mt-10 grid grid-cols-1 gap-4">
      <a
        href={EXTERNAL_URLS.WHATSAPP}
        target="_blank"
        rel="noopener"
        class="group inline-flex items-center justify-between rounded-xl border border-emerald-200 bg-emerald-50 px-5 py-4 text-emerald-800 transition hover:bg-emerald-100"
      >
        <span class="flex items-center gap-3">
          <i class="ri-whatsapp-line text-2xl"></i>
          <span class="font-medium">WhatsApp</span>
        </span>
        <i
          class="ri-arrow-right-up-line text-xl opacity-60 group-hover:opacity-100"
        ></i>
      </a>

      <a
        href={EXTERNAL_URLS.FORM}
        target="_blank"
        rel="noopener"
        class="group inline-flex items-center justify-between rounded-xl border border-slate-200 bg-white px-5 py-4 text-slate-800 transition hover:bg-slate-50"
      >
        <span class="flex items-center gap-3">
          <i class="ri-edit-2-line text-2xl"></i>
          <span class="font-medium">Ãœyelik Formu</span>
        </span>
        <i
          class="ri-arrow-right-up-line text-xl opacity-60 group-hover:opacity-100"
        ></i>
      </a>

      <a
        href={EXTERNAL_URLS.INSTAGRAM}
        target="_blank"
        rel="noopener"
        class="group inline-flex items-center justify-between rounded-xl border border-pink-200 bg-pink-50 px-5 py-4 text-pink-800 transition hover:bg-pink-100"
      >
        <span class="flex items-center gap-3">
          <i class="ri-instagram-line text-2xl"></i>
          <span class="font-medium">Instagram</span>
        </span>
        <i
          class="ri-arrow-right-up-line text-xl opacity-60 group-hover:opacity-100"
        ></i>
      </a>

      <a
        href={EXTERNAL_URLS.TWITTER}
        target="_blank"
        rel="noopener"
        class="group inline-flex items-center justify-between rounded-xl border border-sky-200 bg-sky-50 px-5 py-4 text-sky-800 transition hover:bg-sky-100"
      >
        <span class="flex items-center gap-3">
          <i class="ri-twitter-x-line text-2xl"></i>
          <span class="font-medium">Twitter</span>
        </span>
        <i
          class="ri-arrow-right-up-line text-xl opacity-60 group-hover:opacity-100"
        ></i>
      </a>

      <a
        href="/reading"
        class="group inline-flex items-center justify-between rounded-xl border border-indigo-200 bg-indigo-50 px-5 py-4 text-indigo-800 transition hover:bg-indigo-100"
      >
        <span class="flex items-center gap-3">
          <i class="ri-book-2-line text-2xl"></i>
          <span class="font-medium">Reading Sessions</span>
        </span>
        <i
          class="ri-arrow-right-up-line text-xl opacity-60 group-hover:opacity-100"
        ></i>
      </a>
    </div>
  </main>
</Layout>
