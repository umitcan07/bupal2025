---
import "../styles/tailwind.css";
import "@fontsource/geist";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>BUPAL · Boğaziçi University Palestine Awareness</title>
    <meta
      name="description"
      content="BUPAL — Boğaziçi University Palestine Awareness. Boğaziçi Üniversitesi Filistin Farkındalığı Topluluğu. Join us via WhatsApp, Form, Instagram, and Twitter."
    />
    <meta name="theme-color" content="#0ea5e9" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="BUPAL" />
    <meta
      property="og:title"
      content="BUPAL · Boğaziçi University Palestine Awareness"
    />
    <meta
      property="og:description"
      content="Boğaziçi University Palestine Awareness — Boğaziçi Üniversitesi Filistin Farkındalığı Topluluğu."
    />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:url" content="/" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@bupalestine" />
    <meta
      name="twitter:title"
      content="BUPAL · Boğaziçi University Palestine Awareness"
    />
    <meta
      name="twitter:description"
      content="Boğaziçi University Palestine Awareness — Boğaziçi Üniversitesi Filistin Farkındalığı Topluluğu."
    />
    <meta name="twitter:image" content="/rhombus.svg" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/remixicon@4.4.0/fonts/remixicon.css"
    />
  </head>
  <body
    class="min-h-screen bg-gradient-to-b from-white to-slate-50 text-slate-800"
  >
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
